<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/first_scan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp"
        android:layout_alignParentTop="true">
        <EditText
            android:id="@+id/et_result1"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="4"
            android:layout_marginRight="8dp"
            android:background="@drawable/rounded_edit"/>
        <ImageView
            android:id="@+id/bt_scan1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:src="@drawable/icons8_screenshot_filled_30"
            android:layout_weight="1"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp"
        android:layout_below="@+id/first_scan">
        <EditText
            android:id="@+id/et_result2"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="4"
            android:layout_marginRight="8dp"
            android:background="@drawable/rounded_edit"/>
        <ImageView
            android:id="@+id/bt_scan2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icons8_screenshot_filled_30"
            android:layout_weight="1"
            />

    </LinearLayout>

    <Button
        android:id="@+id/bt_summit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Summit"
        android:textColor="@android:color/white"
        android:layout_margin="8dp"
        android:background="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>